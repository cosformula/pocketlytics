# Public URL for users
BASE_URL=https://analytics.example.com

# Hostname only (used by Traefik routing rule)
POCKETLYTICS_HOST=analytics.example.com

# Required auth secret (use a long random string)
BETTER_AUTH_SECRET=replace_with_a_long_random_secret

# App behavior
DISABLE_SIGNUP=false
DISABLE_TELEMETRY=true

# Embedded DB files in container volume
SQLITE_DB_PATH=file:/app/data/pocketlytics.sqlite
DUCKDB_PATH=/app/data/pocketlytics-analytics.duckdb

# Optional tokens
MAPBOX_TOKEN=
